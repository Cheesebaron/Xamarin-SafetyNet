<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/cts_profile_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:text="CTS Profile Match:" />

    <TextView
        android:id="@+id/cts_profile_match_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/cts_profile_match"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        tools:text="false" />

    <TextView
        android:id="@+id/basic_integrity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_below="@id/cts_profile_match_value"
        android:text="Basic Integrity:" />

    <TextView
        android:id="@+id/basic_integrity_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/basic_integrity"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        tools:text="false" />

</RelativeLayout>
